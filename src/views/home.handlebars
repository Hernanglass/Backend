<div>
    <h1>Solucion Desafio 6!</h1>

    <h3>Lista de productos:</h3>


    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Codigo</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Status</th>
                <th>Imagen</th>
            </tr>
        </thead>

        <tbody>
            {{#each productos}}
            <tr>
                <td> {{this._id}} </td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>
                    {{#if this.status}}
                    Activo
                    {{else}}
                    Desactivado
                    {{/if}}
                </td>
                <td>
                    {{#if this.thumbnails.lenght}}
                    <a href="{{this.thumbnails.[0]}}" target= "_blank" > {{this.thumbnails.[0]}} </a>
                    {{else}}
                    No hay imagen
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script src= "/socket.io/socket.io.js"></script>
<script src= "/js/index.js"></script>